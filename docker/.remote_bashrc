# 远程开发环境 Shell配置

# 颜色定义
PS1='\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '

# 别名
alias ll='ls -la'
alias la='ls -A'
alias l='ls -CF'
alias ..='cd ..'
alias ...='cd ../..'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# 开发工具别名
alias py='python'
alias py3='python3'
alias pip='pip3'
alias node='node'
alias npm='npm'

# 项目相关
alias dev='cd /workspace'
alias status='docker ps'
alias logs='docker logs -f remote-dev-env'

# 环境变量
export PYTHONPATH="/workspace:$PYTHONPATH"
export NODE_PATH="/workspace/node_modules:$NODE_PATH"

# 欢迎信息
echo "🚀 远程开发环境已就绪"
echo "📁 工作目录: /workspace"
echo "🐳 容器状态: $(docker ps --filter name=remote-dev-env --format 'table {{.Status}}' | tail -n +2)"
echo "💡 提示: 使用 'dev' 命令查看帮助"
echo "" 