# 🚀 远程开发环境 - Shell配置
# 简化版配置，专注于开发体验

# 设置工作目录
cd /workspace

# 显示欢迎信息
echo "🚀 欢迎使用远程开发环境！"
echo "📍 当前目录: $(pwd)"
echo "🐳 容器ID: $HOSTNAME"
echo "⏰ 时间: $(date)"
echo "────────────────────────────────────────"

# 设置别名
alias ll='ls -la'
alias la='ls -A'
alias l='ls -CF'
alias ..='cd ..'
alias ...='cd ../..'
alias py='python3'
alias pip='pip3'
alias node='node'
alias npm='npm'

# 设置PS1提示符
export PS1='\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '

# 设置历史记录
export HISTSIZE=1000
export HISTFILESIZE=2000
export HISTCONTROL=ignoreboth

# 设置编辑器
export EDITOR=vim

# 显示当前环境信息
echo "📦 Python版本: $(python --version 2>/dev/null || echo '未安装')"
echo "🐍 pip版本: $(pip --version 2>/dev/null || echo '未安装')"
echo "🟢 Node.js版本: $(node --version 2>/dev/null || echo '未安装')"
echo "📦 npm版本: $(npm --version 2>/dev/null || echo '未安装')"
echo "📁 工作目录: $(pwd)"
echo "────────────────────────────────────────" 