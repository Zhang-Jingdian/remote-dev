{
  "name": "Remote Python Dev Environment",
  "dockerComposeFile": [
    "../config/docker/docker-compose.yml"
  ],
  "service": "dev",
  "workspaceFolder": "/workspace",
  // VS Code 扩展
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance",
    "ms-python.black-formatter",
    "ms-python.isort",
    "ms-python.flake8",
    "ms-vscode.vscode-json",
    "redhat.vscode-yaml"
  ],
  // VS Code 设置
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "python.defaultInterpreterPath": "/usr/local/bin/python",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
    "editor.rulers": [
      88
    ],
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "terminal.integrated.defaultProfile.linux": "bash",
    "git.autofetch": true,
    "json.schemas": []
  },
  // 端口转发
  "forwardPorts": [
    8000
  ],
  "portsAttributes": {
    "8000": {
      "label": "Application",
      "onAutoForward": "notify"
    }
  },
  // 容器启动后执行的命令 (简化版本，避免网络问题)
  "postCreateCommand": "bash -c 'unset http_proxy https_proxy HTTP_PROXY HTTPS_PROXY && pip install --trusted-host pypi.org --trusted-host pypi.python.org --trusted-host files.pythonhosted.org -r config/docker/requirements.txt || echo \"跳过依赖安装，请手动安装\"'",
  // 开发容器功能 (暂时禁用以解决网络问题)
  // "features": {
  //   "ghcr.io/devcontainers/features/git:1": {},
  //   "ghcr.io/devcontainers/features/github-cli:1": {}
  // }
}